generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  url      = env("DATABASE_URL")
}

datasource db {
  provider = "postgresql"
}

generator prismabox {
  provider                    = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName   = "t"
  inputModel                  = true
  output                      = "../generated/prismabox"
}

enum Language {
  en
  vi
  jp
  zh
  kr
  fr
  de
  es
}

// --------------------
// USER
// --------------------
model User {
  id        String   @id @default(cuid())
  email     String
  username  String   @unique
  password  String
  createdAt DateTime @default(now())

  knownWords  UserWord[]
  texts       UserText[]
  quizResults QuizResult[]
}

// --------------------
// TEXTS (ARTICLES USER READS)
// --------------------
model UserText {
  id        String   @id @default(cuid())
  userId    String
  language  Language
  title     String?
  content   String // raw text
  createdAt DateTime @default(now())

  user          User           @relation(fields: [userId], references: [id])
  generatedQuiz GeneratedQuiz?
  quizResults   QuizResult[]

  @@index([userId])
  @@index([language])
}

// --------------------
// WORD DICTIONARY
// Supports meaning, IPA/pinyin/furigana, frequency for difficulty scoring
// --------------------
model Word {
  id         String   @id @default(cuid())
  text       String
  normalized String? // lowercase, no accents
  language   Language
  meaning    String?
  ipa        String? // for EN or other
  reading    String? // pinyin / furigana / hangul breakdown
  frequency  Int? // 1 = most common, higher = rarer

  userWords UserWord[]

  @@unique([text, language])
  @@index([language, frequency])
}

// --------------------
// USER VOCABULARY MASTERY
// --------------------
model UserWord {
  id        String   @id @default(cuid())
  userId    String
  wordId    String
  level     Int      @default(0) // 0â€“5 spaced repetition mastery
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  word Word @relation(fields: [wordId], references: [id])

  @@unique([userId, wordId])
  @@index([userId])
  @@index([wordId])
}

// --------------------
// AUTO-GENERATED QUIZZES PER TEXT
// --------------------
model GeneratedQuiz {
  id         String @id @default(cuid())
  userTextId String @unique
  questions  Json // structured quiz format

  userText UserText @relation(fields: [userTextId], references: [id])
}

// --------------------
// QUIZ RESULTS
// --------------------
model QuizResult {
  id         String   @id @default(cuid())
  userId     String
  userTextId String
  score      Int
  total      Int
  takenAt    DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id])
  userText UserText @relation(fields: [userTextId], references: [id])

  @@index([userId])
  @@index([userTextId])
}
