{
  "name": "langs-world",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:backend": "turbo dev --filter=@langs-world/backend",
    "dev:frontend": "turbo dev --filter=@langs-world/frontend",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:studio": "turbo db:studio"
  },
  "devDependencies": {
    "turbo": "^2.6.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.2.0"
}